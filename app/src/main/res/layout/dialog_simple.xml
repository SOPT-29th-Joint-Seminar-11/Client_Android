<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_fill_radius_17dp"
    >

    <TextView
        android:id="@+id/tv_dialog_reserve_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        tools:text="@string/tool_dialog_reserve_msg"
        android:fontFamily="@font/noto_sans"
        android:textFontWeight="400"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:layout_marginHorizontal="50dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_dialog_reserve_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/alpha_0"
        android:layout_marginTop="20dp"

        android:text="@string/detail_dialog_btn_ok"
        android:textColor="@color/main"
        android:fontFamily="@font/noto_sans"
        android:textFontWeight="400"
        android:includeFontPadding="false"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_reserve_msg" />
</androidx.constraintlayout.widget.ConstraintLayout>